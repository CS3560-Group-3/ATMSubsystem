<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="atm_sub_system.secondaryController" style = "-fx-background-color: #1d4231;">
    <children>
        <Label fx:id="welcomeLabel" text = "Loading..." style ="-fx-text-fill: #f8ae1b; -fx-font-weight: bold;" />
        <Button fx:id="depositButton" text="Deposit Funds" onAction = "#switchToDepositScreen" />
        <Button fx:id="withdrawlButton" text="Withdraw Funds"  onAction = "#switchToWithdrawlScreen"/>
        <Button fx:id="transFerFundsButton" text="Transer Funds" onAction = "#switchToTransferFundsScreen" />

        <Button fx:id="viewAccountBalanceButton" text="View Account Balance" onAction="#switchToAccountBalanceScreen" />
        
        <Button fx:id="secondaryButton" text="Log Out" onAction="#logOut" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
