<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>


<VBox alignment="TOP_LEFT" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="atm_sub_system.startScreen" style = "-fx-background-color: green;">
   <children>
      <Label text="Welcome! Insert your account number and PIN to begin." style = "-fx-text-fill: yellow; -fx-font-weight: bold;" />
      <TextField fx:id="accountNumberInput" promptText = "Enter account number here"/>
      <PasswordField fx:id="pinInput" promptText = "Enter PIN here"/>
      <Button fx:id="primaryButton" text="Log On" onAction="#logOn"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
