<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="atm_sub_system.depositScreenController" style = "-fx-background-color: #1d4231;">
    <Label fx:id = "selectAccountLabel" text = "Please select the account to deposit into." style ="-fx-text-fill: #f8ae1b; -fx-font-weight: bold;" />
    <ComboBox fx:id="accountSelectDropdown" prefWidth="200" />
    <Label fx:id = "insertAmountDepositLabel" text = "Please insert deposit amount." style ="-fx-text-fill: #f8ae1b; -fx-font-weight: bold;" />
    <TextField fx:id = "depositAmountTextField" promptText = "Enter deposit amount" prefWidth="100" />
    <Button fx:id = "depositButton"  text = "Deposit" onAction = "#deposit" />
    <Button fx:id = "toSecondary" onAction ="#switchToSecondary" text = "Back to Menu"/>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
