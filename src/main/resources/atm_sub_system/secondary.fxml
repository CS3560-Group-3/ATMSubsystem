<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="atm_sub_system.secondaryController" style = "-fx-background-color: #1d4231;">
    <children>

        <VBox spacing="0" alignment="CENTER">
            <Label fx:id="welcomeLabel" text = "Loading..." style ="-fx-text-fill: #f8ae1b; -fx-font-weight: bold; -fx-font-size: 20px; -fx-margin: 0px;" />
            <Label text = "What do you want to do?" style ="-fx-text-fill: #f8ae1b; -fx-font-weight: bold; -fx-font-size: 15px; -fx-margin: 0px;" />
            <VBox.margin>
                <Insets bottom="25"/>
            </VBox.margin>
        </VBox>
        
        <Button fx:id="depositButton" text="Deposit Funds" onAction = "#switchToDepositScreen" style="-fx-background-color: #f8ae1b; -fx-pref-width: 250px; -fx-background-radius: 5px; -fx-padding: 10px;" />
        <Button fx:id="withdrawlButton" text="Withdraw Funds"  onAction = "#switchToWithdrawlScreen" style="-fx-background-color: #f8ae1b; -fx-pref-width: 250px; -fx-background-radius: 5px; -fx-padding: 10px;" />
        <Button fx:id="transFerFundsButton" text="Transfer Funds" onAction = "#switchToTransferFundsScreen" style="-fx-background-color: #f8ae1b; -fx-pref-width: 250px; -fx-background-radius: 5px; -fx-padding: 10px;" />
        <Button fx:id="viewAccountBalanceButton" text="View Account Balance" onAction="#switchToAccountBalanceScreen" style="-fx-background-color: #f8ae1b; -fx-pref-width: 250px; -fx-background-radius: 5px; -fx-padding: 10px;" />
        
        <Button fx:id="secondaryButton" text="Log Out" onAction="#logOut" style="-fx-background-color: #ff4c4c; -fx-text-fill: white; -fx-pref-width: 250px; -fx-background-radius: 5px; -fx-padding: 10px;" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
